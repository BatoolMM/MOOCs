{
  "source": {
    "include": ["../API/src", "../Frontend/src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "templates": {
    "theme": "yeti",
    "syntaxTheme": "dark"
  },
  "tags": {
    "allowUnknownTags": ["category"]
  },
  "plugins": ["node_modules/better-docs/category"],
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "verbose": true,
    "template": "node_modules/better-docs",
    "readme": "README.md",
    "tutorials": "./docs/tutorials"
  }
}
